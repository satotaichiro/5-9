<div class="container">
	<div class="row">
		<div class="col-xs-3"></div>
	  <div class="col-xs-6">
		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>

		<% if @book.errors.any? %>
		<%= @book.errors.count %> errors prohibited this book from being saved:
		<% @book.errors.full_messages.each do |message| %>
		<%= message %>
		<% end %>
		<% end %>

		<p class="row">
			<h4>Title</h4>
			 <%= f.text_field :title, class: "col-xs-12 form-control" %>
		</p>

		<p class="row">
			<h4>Body</h4>
			 <%= f.text_area :body, class: "col-xs-12 form-control" %>
		</p>

		<p class="row">
			<div>
			 <%= f.submit 'Update Book', class: "btn btn-block btn-primary" %>
			 <% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-4"></div>
			<div class="col-xs-6">
			 <%= link_to "Show", book_path(@book) %>
			 <span>|</span>
			 <%= link_to "Back", books_path %>
			</div>
		</div>
	</div>
</div>