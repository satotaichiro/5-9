<div class="container">
	<div class="row">
<%= render'books/list',book:@book ,user:@book.user %>

<div class="main-list col-md-9">
	<div class="Book detail">
		<h2>Book detail</h2>
		<table class="table table-striped">
			<tbody>
				<tr>
					<td class="col-lg-3"><%= link_to user_path(@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
						<p><%= @user.name %></p>
						<% end %>
					</td>
					<td class="col-lg-3"><%= link_to book_path(@book.id) do %>
						<%= @book.title %>
						<% end %>
					</td>
					<td class="col-lg-4"><%= @book.body %></td>

					<% if current_user.id == @book.user_id %>
					<td class="col-lg-1"><%= link_to 'Edit',edit_book_path(@book.id), class: "btn btn-success" %></td>
					<td class="col-lg-1"><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "本当に削除してもよろしいですか?" }, class: "btn btn-danger" %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
</div>
</div>
