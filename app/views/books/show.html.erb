<%= render'books/list',book:@book ,user:@book.user %>

<h1>Book detail</h1>

<p><%= link_to user_path(@book.user) do %>
	<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
			<p><%= @user.name %></p>
			<% end %>
</p>
<p>Title:</p>
<span><%= link_to book_path(@book.id) do %>
	<%= @book.title %>
	<% end %>
</span>
<p>Body:</p>
<span><%= @book.body %></span>
<br></br>
<br>
<% if current_user.id == @book.user_id %>
	<%= link_to 'Edit',edit_book_path(@book.id) %>
	<%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "本当に削除してもよろしいですか?" } %>
		<% end %>
