<%= render'books/list',book:@book ,user:current_user %>

<h2>Books</h2>

	<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

	<% @books.each do |book| %>
	<tbody>
	<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></td>

		<td><%= link_to book.title, book_path(book.id) %></td>

		<td><%= book.body %></td>
	</tr>
	</tbody>
	<% end %>
</table>
