<div class="container">
  <div class="row">
      <%= render'books/list',book:@book ,user:current_user %>
        <div class="main_list col-lg-8">
        	<div class="Books">
                <h2>Books</h2>
        		<table class="table table-striped">
        			<thead>
        				<tr>
        					<th class="col-lg-3"></th>
        					<th class="col-lg-5">Title</th>
        					<th class="col-lg-5">Opinion</th>
        				</tr>
        			</thead>
        			<% @books.each do |book| %>
        			<tbody>
        				<tr>
        					<td>
        						<%= link_to (book.user) do %>
        						<%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: "jpg", fallback: "no_image.jpg" %>
        						<% end %>
        					</td>
        					<td><%= link_to book.title, book_path(book.id) %></td>
        					<td><%= book.body %></td>
        				</tr>
        			</tbody>
        			<% end %>
        		</table>
        	</div>
        </div>
    </div>
</div>
