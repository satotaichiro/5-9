
<h2>Books</h2>

	<table>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

	<!--取得・一覧のリストをここに出す-->
	<% @books.each do |book| %>
	<tbody>
	<tr>
		<td><%= link_to book_path(book.id) do %>
			<%= book.title %>
			<% end %>
			</td>
		<td><%= book.body %></td>
	</tr>
	</tbody>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>
<% end %>