
<h2>Books</h2>

	<table>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

	<!--取得・一覧のリストをここに出す-->
	<% @books.each do |book| %>
	<tbody>
	<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></td>
		<td><%= link_to book_path(book.id) do %>
			<%= book.title %>
			<% end %>
			</td>
		<td><%= book.body %></td>
	</tr>
	</tbody>
	<% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>
<% end %>