<h1>User info</h1>
<div><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no-image-icon.jpg" %></div>

<div>name:<%= user.name %></div>

<div>introduction:<%= user.introduction %></div>

<%= link_to "edit",edit_user_path(user.id) %>

<h2>New book</h2>
<%= form_for(book) do |f| %>

<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
  <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>
<% end %>