<h1>User info</h1>
<div><%= image_tag attachment_url(@user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg") %></div>

<div>name:<%= @user.name %></div>

<div>introduction:<%= @user.introduction %></div>

<%= link_to "edit", edit_user_path(@user.id) %>

<h2>Books</h2>

<table>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

	<% @books.each do |book| %>
	<tbody>
	<tr>
		<td><%= link_to book_path(book.id) do %>
			<%= book.title %>
			<% end %>
			</td>
		<td><%= book.body %></td>
	</tr>
	</tbody>
	<% end %>
</table>
