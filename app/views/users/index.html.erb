<div class="container">
	<div class="row">

		<%= render'books/list',book:@book ,user:@user %>
		<div class="main-list col-lg-9">

			<div class="users">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th class="col-lg-3">image</th>
						    <th class="col-lg-6">name</th>
						    <th class="col-lg-3"></th>
						</tr>
					</thead>

					<!--取得・一覧のリストをここに出す-->
					<% @users.each do |users| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag users, :profile_image, :fill, 60, 60, format: "jpg", fallback: "no-image-icon.jpg" %></td>
							<td><%= users.name %></td>
							<td><%= link_to "Show", user_path(users.id) %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
